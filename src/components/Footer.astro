---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: 'Features', href: '/#features' },
    { name: 'Pricing', href: '/#pricing' },
    { name: 'Documentation', href: '/knowledge-base' },
    { name: 'Blog', href: '/blog' },
  ],
  company: [
    { name: 'About', href: '/about' },
    { name: 'Contact', href: '/contact' },
    { name: 'Privacy', href: '/privacy' },
    { name: 'Terms', href: '/terms' },
  ],
  resources: [
    { name: 'Knowledge Base', href: '/knowledge-base' },
    { name: 'Guides', href: '/knowledge-base?category=guides' },
    { name: 'Tutorials', href: '/knowledge-base?category=tutorials' },
    { name: 'FAQ', href: '/knowledge-base?category=faq' },
  ],
};

const socialLinks = [
  { name: 'GitHub', icon: 'github', href: '#' },
  { name: 'Twitter', icon: 'twitter', href: '#' },
  { name: 'LinkedIn', icon: 'linkedin', href: '#' },
];
---

<footer class="footer footer-center p-10 bg-base-200 text-base-content">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 w-full text-left">
      <!-- Brand -->
      <div>
        <a href="/" class="text-2xl font-bold gradient-text inline-block mb-4">
          AiWeb
        </a>
        <p class="text-base-content/70">
          Building the future of web experiences with modern technologies.
        </p>
      </div>

      <!-- Product -->
      <div>
        <h3 class="footer-title opacity-100">Product</h3>
        <ul class="space-y-2">
          {footerLinks.product.map((link) => (
            <li>
              <a href={link.href} class="link link-hover">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="footer-title opacity-100">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="link link-hover">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="footer-title opacity-100">Resources</h3>
        <ul class="space-y-2">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="link link-hover">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Social Links -->
    <div class="mt-8">
      <div class="flex gap-4 justify-center">
        {socialLinks.map((social) => (
          <a
            href={social.href}
            class="btn btn-ghost btn-circle"
            aria-label={social.name}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        ))}
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 border-t border-base-300 pt-8 w-full text-center">
      <p class="text-base-content/70">
        Â© {currentYear} AiWeb. All rights reserved. Built with Astro, DaisyUI & Keystatic.
      </p>
    </div>
  </div>
</footer>
