---
import ThemeSwitcher from './ThemeSwitcher';

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' },
  { name: 'Knowledge Base', href: '/knowledge-base' },
  { name: 'About', href: '/about' },
];

const currentPath = Astro.url.pathname;
---

<header class="navbar bg-base-100 shadow-lg sticky top-0 z-50 backdrop-blur-lg bg-base-100/80">
  <div class="container-custom">
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex={0} role="button" class="btn btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
          </svg>
        </div>
        <ul tabindex={0} class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={currentPath === item.href ? 'active' : ''}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <a href="/" class="btn btn-ghost text-xl font-bold gradient-text">
        AiWeb
      </a>
    </div>

    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={`btn btn-ghost ${currentPath === item.href ? 'btn-active' : ''}`}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div class="navbar-end gap-2">
      <ThemeSwitcher client:load />
      <a href="/keystatic" class="btn btn-primary btn-sm">
        Admin
      </a>
    </div>
  </div>
</header>
