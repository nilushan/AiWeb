---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/ui/Hero.astro';
import Feature from '@/components/ui/Feature.astro';
import Button from '@/components/ui/Button.astro';

const base = import.meta.env.BASE_URL;

const features = [
  {
    icon: '‚ö°',
    title: 'Lightning Fast',
    description: 'Built with Astro for optimal performance and blazing fast page loads. Zero JavaScript by default.',
    iconColor: 'text-warning'
  },
  {
    icon: 'üé®',
    title: 'Beautiful Design',
    description: 'Modern UI powered by DaisyUI with 30+ themes. Responsive and accessible components out of the box.',
    iconColor: 'text-primary'
  },
  {
    icon: 'üìù',
    title: 'Content Management',
    description: 'Keystatic CMS integration for seamless content editing. Create and manage your content with ease.',
    iconColor: 'text-secondary'
  },
  {
    icon: 'üîç',
    title: 'SEO Optimized',
    description: 'Built-in SEO best practices with sitemap, meta tags, and Open Graph support for better rankings.',
    iconColor: 'text-success'
  },
  {
    icon: 'üñºÔ∏è',
    title: 'Image Optimization',
    description: 'Automatic image optimization with Sharp. Lazy loading and responsive images for better performance.',
    iconColor: 'text-info'
  },
  {
    icon: 'üé≠',
    title: 'Theme Support',
    description: 'Switch between 30+ beautiful themes instantly. Dark mode and custom theming supported.',
    iconColor: 'text-accent'
  }
];
---

<BaseLayout
  title="Home"
  description="A modern, fast, and beautiful web platform built with Astro, DaisyUI, and Keystatic CMS."
>
  <!-- Hero Section -->
  <Hero
    title="Build Amazing Websites with AiWeb"
    subtitle="A modern web platform powered by Astro, DaisyUI, and Keystatic CMS"
  >
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button href={`${base}blog`} variant="primary" size="lg" wide>
        Get Started
      </Button>
      <Button href={`${base}knowledge-base`} variant="secondary" size="lg" wide outline>
        Learn More
      </Button>
    </div>
  </Hero>

  <!-- Features Section -->
  <section class="section-padding bg-base-200">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Powerful Features</h2>
        <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
          Everything you need to build modern, fast, and beautiful websites
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <Feature
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
            iconColor={feature.iconColor}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="card bg-gradient-to-br from-primary to-secondary text-primary-content shadow-2xl">
        <div class="card-body items-center text-center p-12">
          <h2 class="card-title text-4xl md:text-5xl font-bold mb-4">
            Ready to Get Started?
          </h2>
          <p class="text-xl mb-8 max-w-2xl opacity-90">
            Join thousands of developers building amazing websites with our modern tech stack
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <Button href={`${base}blog`} variant="accent" size="lg" wide>
              View Blog
            </Button>
            <Button href={`${base}knowledge-base`} variant="ghost" size="lg" wide class="bg-white/20 hover:bg-white/30">
              Browse Docs
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="section-padding bg-base-200">
    <div class="container-custom">
      <div class="stats stats-vertical lg:stats-horizontal shadow-xl w-full">
        <div class="stat">
          <div class="stat-figure text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="stat-title">Performance Score</div>
          <div class="stat-value text-primary">100</div>
          <div class="stat-desc">Perfect Lighthouse score</div>
        </div>

        <div class="stat">
          <div class="stat-figure text-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
          </div>
          <div class="stat-title">Themes Available</div>
          <div class="stat-value text-secondary">30+</div>
          <div class="stat-desc">Beautiful DaisyUI themes</div>
        </div>

        <div class="stat">
          <div class="stat-figure text-accent">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <div class="stat-title">Components</div>
          <div class="stat-value text-accent">50+</div>
          <div class="stat-desc">Reusable UI components</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
