---
import SEO from '@/components/SEO.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  article?: boolean;
  publishDate?: string;
  author?: string;
  tags?: string[];
  canonicalURL?: string;
}

const {
  title,
  description,
  image,
  article,
  publishDate,
  author,
  tags,
  canonicalURL,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      image={image}
      article={article}
      publishDate={publishDate}
      author={author}
      tags={tags}
      canonicalURL={canonicalURL}
    />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
