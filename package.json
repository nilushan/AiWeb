{
  "name": "aiweb-monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "AiWeb - Monorepo with Astro static site and Keystatic CMS",
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "build:cms": "docker build -f apps/cms/Dockerfile -t aiweb-cms .",
    "preview": "npm run preview --workspace=apps/web",
    "clean": "rm -rf apps/web/dist apps/web/.astro node_modules apps/*/node_modules",
    "install:all": "npm install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
