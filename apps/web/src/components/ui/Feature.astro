---
export interface Props {
  icon?: string;
  title: string;
  description: string;
  href?: string;
  iconColor?: string;
  class?: string;
}

const {
  icon,
  title,
  description,
  href,
  iconColor = 'text-primary',
  class: className = '',
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class={`group ${href ? 'card-hover cursor-pointer' : ''} ${className}`}
>
  <div class="card bg-base-100 shadow-xl h-full">
    <div class="card-body">
      {icon && (
        <div class={`text-4xl mb-4 ${iconColor} transition-transform duration-300 group-hover:scale-110`}>
          {icon}
        </div>
      )}
      <h3 class="card-title text-2xl mb-3">{title}</h3>
      <p class="text-base-content/70 leading-relaxed">{description}</p>
      <slot />
    </div>
  </div>
</Tag>
