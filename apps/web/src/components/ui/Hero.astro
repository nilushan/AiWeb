---
export interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  overlay?: boolean;
  gradient?: boolean;
  centered?: boolean;
  class?: string;
}

const {
  title,
  subtitle,
  image,
  overlay = false,
  gradient = true,
  centered = true,
  class: className = '',
} = Astro.props;

const heroClasses = [
  'hero',
  'min-h-[60vh]',
  gradient && !image ? 'hero-gradient' : '',
  className,
].filter(Boolean).join(' ');
---

<div class={heroClasses} style={image ? `background-image: url(${image});` : ''}>
  {(image && overlay) && (
    <div class="hero-overlay bg-opacity-60"></div>
  )}
  <div class={`hero-content ${centered ? 'text-center' : ''} flex-col lg:flex-row-reverse max-w-7xl`}>
    <slot name="image" />
    <div class="max-w-3xl">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          {subtitle}
        </p>
      )}
      <slot />
    </div>
  </div>
</div>
